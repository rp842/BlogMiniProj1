<!DOCTYPE html>
<html lang="en">
<head>
    <!--  Document set to universal character set-->
    <meta charset="UTF-8">

    <!-- sets width of webpage to device (Helps to scale universally across devices)-->
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Crawler Blog</title>

    <!-- link css file-->
    <link rel="stylesheet" type="text/css" href="/css/styles.css">
</head>
<body>
    <header>
        <h1>The Crawler Blog</h1>
        
        <nav>
            <!--  link to home page and about page -->
            <a href="/">Home</a> | <a href="/about">About</a>
        </nav>
    </header>

    <div class="content">
        <!-- specifies route that handles form submission-->
        <form action="/submit" method="POST">

            <!-- Title of post-->
            <label for="title">Title</label><br>
            <input type="text" id="title" name="title" required><br><br>

            <!-- Body of post-->
            <label for="BodyText">Post Body</label><br>

            <!-- textarea for a text box -->
            <textarea id="BodyText" name="bodyText" rows="5" cols="50" required></textarea><br><br>

            <!-- Name of username (Username) -->
            <label for="username">Username</label><br>
            <input type="text" id="username" name="username" required><br><br>

            <!-- submit button -->
            <button type="submit">Publish</button>
        </form>

        <!-- holds all blog posts -->
        <div id="postsContainer">

            <!--iterate through posts array -->
            <% posts.forEach(function(post) { %>
                <div class="post">

                    <!-- displays post title -->
                    <h3><%= post.title %></h3>

                    <!-- displays post text -->
                    <p><%= post.bodyText %></p>

                    <!-- displays username -->
                    <p><strong>username:</strong> <%= post.username %></p>

                    <!-- displays date when posting-->
                    <p><strong>Date:</strong> <%= post.date %></p>

                    <!-- route to edit page when button is clicked -->
                    <form action="/edit/<%= post.id %>" method="GET" style="display: inline;">
                        <button type="submit">Edit</button>
                    </form>

                    <!-- sends delete request -->
                    <form action="/delete/<%= post.id %>" method="POST" style="display: inline;">
                        <button type="submit">Delete</button>
                    </form>
                </div>
            <% }); %>
        </div>
    </div>
</body>
</html>
